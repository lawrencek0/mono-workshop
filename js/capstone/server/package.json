{
    "name": "team-yellow-server",
    "version": "0.1.0",
    "private": true,
    "description": "The Node.js Server for Team Yellow's CINS 4060 Project",
    "repository": {
        "type": "git",
        "url": "https://github.com/lawrencek0/team-yellow-server.git"
    },
    "scripts": {
        "start": "yarn run serve",
        "build": "yarn run build-ts && yarn run lint",
        "serve": "node dist/server.js",
        "watch-node": "nodemon dist/server.js",
        "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"yarn run watch-ts\" \"yarn run watch-node\"",
        "test": "jest --forceExit --coverage --verbose",
        "watch-test": "yarn run test -- --watchAll",
        "build-ts": "tsc",
        "watch-ts": "tsc -w",
        "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
        "debug": "yarn run build && yarn run watch-debug",
        "serve-debug": "nodemon --inspect dist/server.js",
        "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"yarn run watch-ts\" \"yarn run serve-debug\"",
        "fixtures": "fixtures ./fixtures --config src/ormconfig.ts --require=ts-node/register --sync"
    },
    "dependencies": {
        "@types/dotenv": "^8.2.0",
        "amazon-cognito-identity-js": "^3.2.0",
        "aws-sdk": "^2.580.0",
        "body-parser": "^1.19.0",
        "class-transformer": "^0.2.3",
        "class-validator": "^0.10",
        "cognito-express": "^2.0.16",
        "compression": "^1.7.4",
        "dotenv": "^8.2.0",
        "email-templates": "^6.0.4",
        "errorhandler": "^1.5.1",
        "express": "^4.17.1",
        "express-validator": "^6.3.0",
        "hashids": "^2.1.0",
        "jsonwebtoken": "^8.5.1",
        "jwk-to-pem": "^2.0.1",
        "moment": "^2.24.0",
        "moment-timezone": "^0.5.27",
        "mysql": "^2.17.1",
        "node-fetch": "^2.6.0",
        "nodemailer": "^6.3.1",
        "pug": "^2.0.4",
        "reflect-metadata": "^0.1.13",
        "request": "^2.88.0",
        "routing-controllers": "^0.8.0",
        "strongly-typed-events": "^1.6.3",
        "typedi": "^0.8.0",
        "typeorm": "^0.2.20",
        "typeorm-typedi-extensions": "^0.2.3",
        "winston": "^3.2.1"
    },
    "devDependencies": {
        "@types/body-parser": "^1.17.1",
        "@types/chai": "^4.2.5",
        "@types/compression": "^1.0.1",
        "@types/email-templates": "^6.0.1",
        "@types/errorhandler": "^0.0.32",
        "@types/express": "^4.17.2",
        "@types/jest": "^24.0.23",
        "@types/jsonwebtoken": "^8.3.5",
        "@types/moment-timezone": "^0.5.12",
        "@types/morgan": "^1.7.37",
        "@types/mysql": "^2.15.8",
        "@types/node": "^12.12.14",
        "@types/node-fetch": "^2.5.4",
        "@types/nodemailer": "^6.2.2",
        "@types/request": "^2.48.3",
        "@types/supertest": "^2.0.8",
        "@typescript-eslint/eslint-plugin": "^2.9.0",
        "@typescript-eslint/parser": "^2.9.0",
        "chai": "^4.2.0",
        "concurrently": "^5.0.0",
        "eslint": "^6.7.1",
        "eslint-config-prettier": "^6.7.0",
        "eslint-plugin-prettier": "^3.1.1",
        "husky": "^3.1.0",
        "jest": "^24.9.0",
        "lint-staged": "^9.5.0",
        "nodemon": "^2.0.1",
        "prettier": "^1.19.1",
        "supertest": "^4.0.2",
        "ts-jest": "^24.2.0",
        "ts-node": "^8.5.2",
        "typeorm-fixtures-cli": "^1.3.7",
        "typescript": "^3.7.2"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        },
        "lint-staged": {
            "*.{js,ts}": [
                "eslint --fix",
                "git add"
            ]
        }
    }
}
